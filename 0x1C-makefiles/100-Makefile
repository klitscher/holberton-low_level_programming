CC = gcc
SRC = main.c holberton.c
OBJ = $(subst .c,.o,$(SRC))
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	if [ -f "./m.h" ]; then $(CC) $(OBJ) -o $(NAME); fi

.PHONY: clean
clean :
	$(RM) -f *~ $(NAME)

.PHONY: oclean
oclean :
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
